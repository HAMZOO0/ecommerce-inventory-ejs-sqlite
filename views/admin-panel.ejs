<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Orbitron', sans-serif; /* Futuristic font */
            margin: 0;
            padding: 0;
            background-color: #0a0a0a; /* Dark background */
            color: #00ffcc; /* Neon green text */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 1rem;
            text-align: center;
        }

        /* Container */
        .container {
            width: 90%;
            max-width: 1200px;
        }

        /* Buttons */
        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .btn {
            padding: 1rem 2rem;
            background-color: #00ffcc; /* Neon green */
            color: #0a0a0a; /* Dark text */
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
            text-align: center;
            font-weight: bold;
        }

        .btn:hover {
            background-color: #00cc99; /* Darker neon green */
            box-shadow: 0 0 15px rgba(0, 255, 204, 0.9); /* Glow effect */
        }

        /* Products Table */
        .products-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 2rem;
            overflow-x: auto; /* Scrollable Table */
        }

        .products-table th,
        .products-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #00ffcc; /* Neon border */
        }

        .products-table th {
            background-color: #1f1f1f; /* Darker header */
            color: #00ffcc; /* Neon green */
        }

        .products-table tr:hover {
            background-color: #262626; /* Darker hover */
        }

        .action-buttons-table {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .action-buttons-table .btn {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
        .link {
            font-size: 1.2rem;

            margin-top: 1rem;
            color: #00ffcc; /* Neon green */
        }

        .link a {
            color: #00ffcc; /* Neon green */
            text-decoration: none;
            transition: text-shadow 0.3s ease;
        }

        .link a:hover {
            text-decoration: underline;
            text-shadow: 0 0 10px rgba(0, 255, 204, 0.7); /* Glow effect */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
                gap: 0.5rem;
            }

            .btn {
                width: 100%; /* Full width buttons */
            }

            .products-table {
                font-size: 0.9rem; /* Smaller text for better fit */
            }
            .link {
            margin-top: 1rem;
            color: #00ffcc; /* Neon green */
        }

        .link a {
            color: #00ffcc; /* Neon green */
            text-decoration: none;
            transition: text-shadow 0.3s ease;
        }

        .link a:hover {
            text-decoration: underline;
            text-shadow: 0 0 10px rgba(0, 255, 204, 0.7); /* Glow effect */
        }
        }
    </style>
    <!-- Google Fonts: Orbitron (Futuristic Font) -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
</head>
<nav></nav>
<body>
    <p class="link"><a href="/">Home</a></p>

    <!-- Container -->
    <div class="container">
        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="/add-product" class="btn">Add Product</a>
            <a href="/edit-product" class="btn">Edit/Delete Products</a>
        </div>

        <!-- Products Table -->
        <h2>Product List</h2>
        <table class="products-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td>$<%= product.price %></td>
                        <td><%= product.category %></td>
                        <td><%= product.stock %></td>
                        <td class="action-buttons-table">
                            <a href="/edit-product/<%= product.id %>" class="btn">Edit</a>
                            <form action="/delete-product/<%= product.id %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
